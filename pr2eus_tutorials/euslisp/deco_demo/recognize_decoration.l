(defun bbox->lst (bbox)
  (let* ((pos #f(0 0 0))
	 (dims #f(0 0 0)))
    (setq coords (tf-pose->coords (send bbox :header :frame_id) (send bbox :pose)))
    (setq pos (send coords :pos))
    (setq dims (ros::tf-point->pos (send bbox :dimensions)))
    (format t "coords: ~A~%" coords)
    (format t "dims: ~A~%" dims)
    (list coords dims))
  )

(defun find-boxes ()
  (ros::duration-sleep 1.0)
  (setq bboxes_msg (one-shot-subscribe *bounding-box-list*
				       jsk_recognition_msgs::BoundingBoxArray
				       :after-stamp (ros::time-now)))
  (setq bboxes (send bboxes_msg :boxes))
  (if (= (send (send (send (elt bboxes 0) :pose) :position) :x) 0)
      (setq bboxes '()))
  )

(defun if-dup-box (bbox_coords bbox_dims)
  (let* ((dup_flag nil)
	 (bbox_pos (send bbox_coords :pos)))
    (dotimes (i (length deco_coords_lst))
      (setq box_distance (norm (v- (send (elt deco_coords_lst i) :pos) bbox_pos)))
      (if (or (< box_distance (elt bbox_dims 0)) (< box_distance (elt bbox_dims 1)))
	  (setq dup_flag t)))
    dup_flag)
  )

(defun find-decoration-sub (rotation)  ;; rotation: 0->clockwise 1->counterclockwise
  (setq move_count 0)
  (setq found_deco_flag nil)
  (while (< move_count 3)
    (find-boxes)
    (while (and (< (length bboxes) 1) (< move_count 3))
      (if found_deco_flag
	  (setq move_count (+ move_count 1)))
      (if (= rotation 0)
	  (send *ri* :go-velocity 0 0 (/ pi 6))
	(send *ri* :go-velocity 0 0 (* -1 (/ pi 9))))
      (send *ri* :wait-interpolation)
      (find-boxes))
    (setq deco_coords_size (bbox->lst (elt bboxes 0)))
    ;; (setq deco_pos (send (elt deco_pos_size 0) :pos))
    (setq deco_coords (elt deco_coords_size 0))
    (setq deco_size (elt deco_coords_size 1))
    (setq dup_flag (if-dup-box deco_coords deco_size))
    (when (or (not dup_flag) (= (length deco_coords_lst) 0))
      (setq deco_coords_lst (list-insert deco_coords (length deco_coords_lst) deco_coords_lst))
      (setq deco_size_lst (list-insert deco_size (length deco_size_lst) deco_size_lst))
      (setq found_deco_flag t))
    (if (= rotation 0)
	(send *ri* :go-velocity 0 0 (/ pi 9))
      (send *ri* :go-velocity 0 0 (* -1 (/ pi 9))))
    (send *ri* :wait-interpolation)
    )
  )

