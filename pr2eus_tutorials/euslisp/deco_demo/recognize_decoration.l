(defun calc-mean-pos ()
  (let* ((mean_x 0)
	 (mean_y 0)
	 (mean_z 0)
	 (num (length deco_coords_lst)))
    (dotimes (i num)
      (setq pos (send (elt deco_coords_lst i) :pos))
      (setq mean_x (+ mean_x (elt pos 0)))
      (setq mean_y (+ mean_y (elt pos 1)))
      (setq mean_z (+ mean_z (elt pos 2))))
    (setq pos_lst (float-vector mean_x mean_y mean_z))
    (setq pos_lst (scale (/ 1.0 num) pos_lst))
    pos_lst)
  )

